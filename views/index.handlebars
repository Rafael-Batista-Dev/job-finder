<!-- Sider Start -->
<div class="slider">
  <div id="fawesome-carousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators indicatior2">
      <li data-target="#fawesome-carousel" data-slide-to="0" class="active"></li>
      <li data-target="#fawesome-carousel" data-slide-to="1"></li>
    </ol>

    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <img src="/img/slider1.jpg" alt="Sider Big Image">
        <div class="carousel-caption">
          <h1 class="wow fadeInLeft">Encontre a empresa dos seus sonhos.</h1>
        </div>
      </div>
      <div class="item">
        <img src="/img/slider2.jpg" alt="Sider Big Image">
        <div class="carousel-caption">
          <h1 class="wow fadeInLeft">Somos o site com mais vagas de tecnologia do mercado.</h1>
        </div>
      </div>

    </div>

  </div>

  <div id="top-container" class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    <form action="/" method="GET">
      <div class="input-group buscador-principal">

        <input name="search_param" value="all" id="search_param" type="hidden">
        <input class="form-control" id="job" name="job" placeholder="Buscar minha vaga..." type="text">

        <span class="input-group-btn">
          <button class="btn btn-subscribe" type="submit"><span class="glyphicon glyphicon-search"></span>
            Buscar</button>
        </span>
      </div>
    </form>
  </div>

</div>

<!-- Sider End -->


<!-- Feature Section -->

<section id="features" class="site-padding">

  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="title">
          {{#if search}}
          <h3>Vagas <span>Disponíveis de {{search}} </span></h3>
          {{else}}
          <h3>Vagas <span>Disponíveis</span></h3>
          {{/if}}
        </div>
      </div>
    </div>
  </div>

  <div class="container">

    <div class="row">
      <!-- Single Feature-->
      <div class="col-sm-12">
        <div class="single-feature wow fadeInRight">
          {{#each jobs}}
          <div class="row">
            <div class="col-md-12">
              <div class="feature-text">

                <h4>{{dataValues.title}}</h4>

                <div class="blog-info">
                  <ul>
                    <li>{{dataValues.company}}</li>
                    <li>R$: {{dataValues.salary}}</li>
                    <li><label class="lbl {{#if dataValues.new_job}}lbl-warning{{/if}}"><i>Vaga Nova!</i></label></li>
                  </ul>

                  <div class="read-more pull-right">
                    <a href="/jobs/view/{{dataValues.id}}" class="btn btn-readmore">Aplicar Agora!</a>
                  </div>

                </div>

              </div>
            </div>
          </div>
          <br>
          {{/each}}
        </div>
      </div>
      <!-- Single Feature-->


    </div>


  </div>
</section>

<!-- Feature Section -->


